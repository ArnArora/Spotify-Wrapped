<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background = "@drawable/green">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtRecsTitle"
            android:text="Expand your music with these recommendations!"
            android:textAlignment="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="#30ffffff"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="These artists are highly recommended for you"
            android:textAlignment="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="#30ffffff"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:layout_below="@id/txtRecsTitle"
            />
        <GridLayout
            android:id="@+id/rec_artists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtRecsTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:columnCount="3"
            android:orientation="horizontal">

            <!-- Boxes representing top tracks -->
            <View
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:background="#FF0000" />

            <View
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:background="#00FF00" />

            <View
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:background="#0000FF" />

            <View
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:background="#FFFF00" />

            <View
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:background="#FF00FF" />

            <View
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:background="#FF5733" />
            />
        </GridLayout>

        <TextView
            android:id="@+id/recSongstxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rec_artists"
            android:layout_marginTop="57dp"
            android:layout_marginEnd="8dp"
            android:background="#30ffffff"
            android:text="Check out these songs similar to your tastes"
            android:textAlignment="center"
            android:textSize="16sp" />

        <GridLayout
            android:id="@+id/rec_songs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recSongstxt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:columnCount="3"
            android:orientation="horizontal">

            <!-- Boxes representing top tracks -->
            <View
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:background="#FF0000" />

            <View
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:background="#00FF00" />

            <View
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:background="#0000FF" />

            <View
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:background="#FFFF00" />

            <View
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:background="#FF00FF" />

            <View
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:background="#FF5733" />
            />
        </GridLayout>
    </RelativeLayout>

</ScrollView>